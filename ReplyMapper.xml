<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="game.site.wep.replyMapper">
	<insert id="insert">
		insert into reply(boardnum,userid,content,restep,relevel)
		values (#{boardnum},#{userid},#{content},#{restep},#{relevel})
	
	</insert>
	<update id="update">
		update reply
		set content=#{content},
			mpdidate =sysdate 
		where rnum = #{rnum}
	
	</update>
	<delete id="delete">
		DELETE FROM reply
		where rnum = #{rnum}
	
	</delete>
	<select id="selectOne" resultType="Reply">
		SELECT * FROM reply
		WHERE rnum=  #{rnum}
	</select>
	<select id="selectList" resultType="Reply">
		SELECT * FROM reply
		WHERE boardnum = #{boardnum}
		ORDER BY restep
	
	</select>
	
	<update id="updateRestep">
		UPDATE reply
		SET restep= restep+1
		WHERE boardnum= #{boardnum}
		AND restep >=  #{restep}
	
	</update>
	
	
</mapper>