<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="game.site.wep.userMapper">
	
	<insert id="insert">
		insert into userJoin (userid,passwd,usernickname,username,email,zipcode,addrload,addrdetail)
        values (#{userid},#{passwd},#{usernickname},#{username},#{email},#{zipcode},#{addrload},#{addrdetail})
	</insert>
	
	<select id="selectOne_id" resultType="User">
		select * from userJoin
		where userid = #{userid}
	
	</select>
	

	
	<select id="selectOne" resultType="User">
		select * from userJoin
		where email = #{email}
	
	</select>
	
	<update id="update_emailauth">
		update userJoin
		set emailauth = 1
		WHERE email = #{email}
	</update>
	
</mapper>